    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest debug",
            "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "sourceMaps": true,
            "address": "localhost"
        }
    ]
}
